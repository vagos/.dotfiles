SCRIPTS=$HOME/.config/i3blocks/scripts
# Need to use `sh -c` in order to expand $HOME

[task]
command=sh -c "$SCRIPTS/task"
interval=1

[disk]
command=sh -c "$SCRIPTS/disk"
interval=60

[volume]
command=sh -c "$SCRIPTS/volume"
interval=persist

[battery]
command=sh -c "$SCRIPTS/battery"
markup=pango
interval=1

[time]
command=sh -c "$SCRIPTS/time"
interval=50
TZ_FILE=~/.tz
STRFTIME_FORMAT=%a %d %b %H:%M
TZONES=$DEFAULT_TZ,$DEFAULT_TZ
TZ_LABELS=,
